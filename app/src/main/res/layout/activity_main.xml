<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#1C48CA"
    android:backgroundTint="#75262B45"
    tools:context="com.android.rccar.MainActivity">

    <Button
        android:id="@+id/btnONOFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="ON/OFF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="359dp"
        android:shadowColor="#17FFEA"
        android:shadowRadius="20"
        android:text="LED :"
        android:textColor="#120404"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnDiscoverable_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="119dp"
        android:onClick="btnEnableDisable_Discoverable"
        android:text="Enable Discoverable" />

    <Button
        android:id="@+id/btnFindUnpairedDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnDiscover"
        android:text="Discover" />

    <ListView
        android:id="@+id/lvNewDevices"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/btnFindUnpairedDevices" />

    <ImageView
        android:id="@+id/front"
        android:layout_width="83dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="52dp"
        app:srcCompat="@drawable/pedal1" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="84dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="47dp"
        app:srcCompat="@drawable/pedal1" />

    <ImageView
        android:id="@+id/led"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="229dp"
        android:layout_marginBottom="347dp"
        app:srcCompat="@drawable/viewfinder" />

    <Button
        android:id="@+id/btnStartConnection"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="199dp"
        android:background="#252A3C"
        android:text="Connect"
        android:textColor="#13EAB7" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="101dp"
        android:layout_height="91dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="193dp"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="114dp"
        android:layout_height="99dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="190dp"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="11dp"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="20"
        android:text="FORWARD"
        android:textAlignment="center"
        android:textColor="#5FA639" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="18dp"

        android:shadowColor="#FFFFFF"
        android:shadowRadius="20"
        android:text="BACKWARD"
        android:textAlignment="center"
        android:textColor="#1E8F22" />

    <ImageView
        android:id="@+id/stop"
        android:layout_width="77dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        app:srcCompat="@android:drawable/ic_media_pause" />

</RelativeLayout>
